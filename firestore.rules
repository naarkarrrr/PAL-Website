/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a security model based on path-based ownership and explicit access controls.
 *
 * Data Structure:
 * - User profiles: /users/{userId}
 * - Ambulance requests: /users/{userId}/ambulance_requests/{requestId}
 * - Adoptable animals: /adoptable_animals/{animalId}
 * - Volunteers: /volunteers/{volunteerId}
 * - Contact form submissions: /contact_form_submissions/{submissionId}
 * - Success stories: /success_stories/{storyId}
 * - Animal description suggestions: /adoptable_animals/{animalId}/description_suggestions/{suggestionId}
 * - Donations: /donations/{donationId}
 *
 * Key Security Decisions:
 * - User data is strictly controlled by the owning user.
 * - Listing of users is disallowed for privacy.
 * - Adoptable animals, volunteers, contact form submissions, success stories, and donations are publicly readable but require authentication for modification.
 * - Animal description suggestions are nested under animals and require authentication for modification.
 *
 * Denormalization for Authorization:
 * - AmbulanceRequest documents store the userId, enabling rules to verify ownership without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user ID matches the user ID of the existing resource.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Enforces that the ID field in the request data matches the userId parameter.
     */
    function isValidUserId() {
      return request.resource.data.id == request.auth.uid;
    }

    /**
     * @description Enforces that the userId cannot be changed after creation.
     */
    function isUserIdImmutable() {
        return request.resource.data.id == resource.data.id;
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' can create their profile.
     * @deny (create) User with ID 'user123' cannot create profile for 'user456'.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Disallowing listing for privacy.
      allow create: if isOwner(userId) && isValidUserId();
      allow update: if isExistingOwner(userId) && isUserIdImmutable();
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for ambulance requests.
     * @path /users/{userId}/ambulance_requests/{requestId}
     * @allow (create) User with ID 'user123' can create an ambulance request.
     * @deny (update) User with ID 'user123' cannot update an ambulance request belonging to 'user456'.
     * @principle Enforces document ownership for writes, validates request-level data.
     */
    match /users/{userId}/ambulance_requests/{requestId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for adoptable animals.
     * @path /adoptable_animals/{animalId}
     * @allow (get) Any user can view adoptable animal profiles.
     * @deny (create) Only authenticated users can create adoptable animal profiles.
     * @principle Public read, authenticated write.
     */
    match /adoptable_animals/{animalId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Rules for volunteer profiles.
     * @path /volunteers/{volunteerId}
     * @allow (get) Any user can view volunteer profiles.
     * @deny (create) Only authenticated users can create volunteer profiles.
     * @principle Public read, authenticated write.
     */
    match /volunteers/{volunteerId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Rules for contact form submissions.
     * @path /contact_form_submissions/{submissionId}
     * @allow (get) Any user can view contact form submissions.
     * @deny (create) Only authenticated users can create contact form submissions.
     * @principle Public read, authenticated write.
     */
    match /contact_form_submissions/{submissionId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Rules for success stories.
     * @path /success_stories/{storyId}
     * @allow (get) Any user can view success stories.
     * @deny (create) Only authenticated users can create success stories.
     * @principle Public read, authenticated write.
     */
    match /success_stories/{storyId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Rules for animal description suggestions.
     * @path /adoptable_animals/{animalId}/description_suggestions/{suggestionId}
     * @allow (get) Any user can view description suggestions.
     * @deny (create) Only authenticated users can create description suggestions.
     * @principle Public read, authenticated write.
     */
    match /adoptable_animals/{animalId}/description_suggestions/{suggestionId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Rules for donations.
     * @path /donations/{donationId}
     * @allow (get) Any user can view donation information.
     * @deny (create) Only authenticated users can create donation records.
     * @principle Public read, authenticated write.
     */
    match /donations/{donationId} {
      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }
  }
}