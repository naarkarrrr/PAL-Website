
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // AUTHENTICATED ADMINS can manage submission collections
    match /membership_applications/{docId} {
      allow read, write: if isSignedIn();
    }
    match /advocate_applications/{docId} {
      allow read, write: if isSignedIn();
    }
    match /collaboration_proposals/{docId} {
      allow read, write: if isSignedIn();
    }
    match /sponsor_inquiries/{docId} {
      allow read, write: if isSignedIn();
    }
    
    // PUBLIC-WRITABLE collections for forms
    match /ambulance_requests/{docId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn(); 
    }
    match /contact_messages/{docId} {
      allow create: if true;
      allow read, update, delete: if isSignedIn();
    }

    // Other collections (public read, admin write)
    match /adoptable_animals/{animalId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /volunteers/{volunteerId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
    
    match /success_stories/{storyId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /donations/{donationId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if request.auth.uid == userId;
      allow update, delete: if isOwner(userId);
    }
  }
}
